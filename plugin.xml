<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-force-lock" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>force-lock</name>
  <js-module name="forceLock" src="www/forceLock.js">
    <clobbers target="window.forceLock" />
  </js-module>
  <platform name="android">
    <source-file src="src/android/forceLock.java" target-dir="src/cordova-plugin-force-lock/forceLock" />
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="forceLock">
        <param name="android-package" value="com.adamhanna.plugin.forceLock" /></feature>
    </config-file>
    <!--
    <config-file target="res/xml/admin_policies.xml" parent="/*">
      <device-admin>
        <uses-policies>
          <force-lock />
        </uses-policies>
      </device-admin>
    </config-file>
    <config-file target="res/values/strings.xml" parent="/*">
      <resources>
        <item type="string" name="request_permission_title">This app requires permissions</item>
        <item type="string" name="request_permission_message">Please allow this app to lock your phone, programmatically.
        </item>
        <item type="string" name="request_permission_explanation">
          Remember that you can only uninstall this app after you disabled the device administrator permission.
        </item>
        <item type="string" name="on_permission_disabled">The application can now be uninstalled.</item>
      </resources>
    </config-file>
    -->
    <config-file parent="/*" target="AndroidManifest.xml">
      <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
      <uses-permission android:name="android.permission.WAKE_LOCK" />
      <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />
      <!--
      <application>
        <activity android:name=".LockMyScreen" android:label="LockMyScreen">
          <intent-filter>
              <action android:name="android.intent.action.GET_CONTENT" />
              <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
        </activity>
      </application>
      -->
      <receiver android:label="LockMyScreen" android:name=".LockMyScreen" android:permission="android.permission.BIND_DEVICE_ADMIN">
        <meta-data android:name="android.app.device_admin">
          <device-admin xmlns:android="http://schemas.android.com/apk/res/android">
              <uses-policies>
                <force-lock />
              </uses-policies>
          </device-admin>
        </meta-data>
        <intent-filter>
          <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
        </intent-filter>
      </receiver>
    </config-file>
  </platform>
</plugin>